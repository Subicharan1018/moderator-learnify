{
  "manifest_version": 3,
  "name": "YouTube Link Saver",
  "version": "1.0",
  "description": "Save YouTube links with metadata.",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ]
}
